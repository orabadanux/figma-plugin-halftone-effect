{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react",
    "types": ["@figma/plugin-typings", "vite/client"],
    "lib": ["ESNext", "DOM"], 
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
